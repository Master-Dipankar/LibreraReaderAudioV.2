<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <ImageView
        android:id="@+id/ttsDialog"
        android:layout_width="@dimen/wh_button_big"
        android:layout_height="@dimen/wh_button_big"
        android:background="@drawable/bg_clickable"
        android:padding="7dip"
        android:contentDescription="@string/settings"
        android:src="@drawable/glyphicons_185_volume_up1" />

    <ImageView
        android:id="@+id/ttsPrev"
        android:layout_width="@dimen/wh_button_big"
        android:layout_height="@dimen/wh_button_big"
        android:layout_gravity="center"
        android:contentDescription="@string/previous_page"

        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_clickable"
        android:padding="6dp"
        android:src="@drawable/glyphicons_173_rewind" />

    <ImageView
        android:id="@+id/ttsPlay"
        android:layout_width="@dimen/wh_button_big"
        android:layout_height="@dimen/wh_button_big"
        android:layout_gravity="center"
        android:contentDescription="@string/play_pause"
        android:layout_marginLeft="14dp"
        android:background="@drawable/bg_clickable"
        android:padding="4dp"
        android:src="@drawable/glyphicons_174_play" />


    <ImageView
        android:contentDescription="@string/next_page"

        android:id="@+id/ttsNext"
        android:layout_width="@dimen/wh_button_big"
        android:layout_height="@dimen/wh_button_big"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:background="@drawable/bg_clickable"
        android:padding="6dp"
        android:src="@drawable/glyphicons_177_forward" />
    
    
    <ImageView
        android:id="@+id/ttsPrevTrack"
        android:contentDescription="@string/next_track"
        android:layout_width="@dimen/wh_button_big"
        android:layout_height="@dimen/wh_button_big"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:background="@drawable/bg_clickable"
        android:padding="8dp"
        android:src="@drawable/glyphicons_172_fast_backward" />
    
    
    <ImageView
        android:contentDescription="@string/previous_track"
        android:id="@+id/ttsNextTrack"
        android:layout_width="@dimen/wh_button_big"
        android:layout_height="@dimen/wh_button_big"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:background="@drawable/bg_clickable"
        android:padding="8dp"
        android:src="@drawable/glyphicons_178_fast_forward" />
    

    <ImageView
        android:id="@+id/ttsStop"
        android:layout_width="@dimen/wh_button_big"
        android:layout_height="@dimen/wh_button_big"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:contentDescription="@string/close"
        android:background="@drawable/bg_clickable"
        android:padding="10dp"
        android:src="@drawable/glyphicons_208_remove_2" />

</LinearLayout>